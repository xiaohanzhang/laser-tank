{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "es6"], 
        "skipLibCheck": true, 
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "typeRoots": ["../node_modules/@types"],
        "outDir": "../dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "../node_modules/*"
    ]
}
